<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.groups.any? %>
      <h3>Groups (<%= @user.groups.count %>)</h3>
        <ul class="groups">
          <% @groups.each do |group| %>
            <li>
              <%if group.image.attached?%>
                <%= link_to image_tag( group.image, height: 100), group %>
              <%else%>
                <%= link_to image_tag( "no_image.jpg", height: 100), group%>
              <%end%>
              <%= link_to group.name, group %>
            </li>
          <% end %>
        </ul>
    <% end %>
  </div>

</div>