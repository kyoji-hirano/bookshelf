<% provide(:title, 'The details') %>
<h1>The details</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">


    <table class="table table-hover"> 
      <tbody>

        <tr>
          <th><%= Book.human_attribute_name(:name) %></th>
          <td><%= @book.name%></td>
        </tr>

        <tr>
          <th><%= Book.human_attribute_name(:image) %></th>
          <%if @book.image.attached?%>
            <td><%= image_tag @book.image, height: 300 %></td>
          <%else%>
            <td><%= image_tag "no_image.jpg", height: 300 %></td>
          <%end%>
        </tr>

        <tr>
          <th><%= Book.human_attribute_name(:description) %></th>
          <td><%= simple_format(h(@book.description), {}, sanitize: false, wrapper_tag: "div")%></td>
        </tr>

        <tr>
          <th><%= Book.human_attribute_name(:created_at) %></th>
          <td><%= @book.created_at%></td>
        </tr>

        <tr>
          <th><%= Book.human_attribute_name(:id) %></th>
          <td><%= @book.id%></td>
        </tr>

        <tr>
          <th><%= Book.human_attribute_name(:group_id) %></th>
          <td><%= @book.group.name%></td>
        </tr>

        <tr>
          <th></th>
          <td>
            <%= link_to 'edit', edit_group_book_path(@group, @book), class: 'btn btn-primary mr-3' %> 
            <%= link_to 'delete', group_book_path(@group, @book), method: :delete, data: { confirm: "「#{@book.name}」を削除します。よろしいですか？"}, class: 'btn btn-danger' %> 
          </td>
        </tr>

      </tbody>
    </table>


  </div>
</div>
