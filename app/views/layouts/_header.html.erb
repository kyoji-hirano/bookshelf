<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "bookshelf", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <li><%= link_to "Review", review_comments_path %></li>
        <li><%= link_to "Books", books_path %></li>        
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "My Group", group_path(current_user.group_id) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>

          <% if current_user.admin?%>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Groups <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "All", groups_path %></li>
                <li><%= link_to "New", new_group_path %></li>

              </ul>
            </li>
          <% end %>

        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>